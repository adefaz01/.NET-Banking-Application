@model Customer
@{
    ViewData["Title"] = "Accounts";
}

<div>
    <h1 class="display-4 mb-4 pb-3 border-bottom">My Statements</h1>
    
    <h3 class="mb-3">Your Accounts</h3>
    <table class="table">
        <tr>
            <th>Account Number</th>
            <th>Account Type</th>
            <th>Balance</th>
            <th></th>
        </tr>
        @foreach(var account in Model.Accounts) {
            <tr>
                <td>@account.AccountNumber</td>
                @if(account.AccountType == "S")
                {
                    <td>Savings</td>
                } 
                else if(account.AccountType == "C")
                {
                    <td>Checking</td>
                }
                <td>@($"{account.Balance:C}")</td>
                <td class="d-flex justify-content-center">
                    <a class="btn btn-primary me-3"
                        asp-action="ViewStatements" asp-route-id="@account.AccountNumber">View Statement</a>
                </td> 
            </tr>
        }
    </table>
</div>
