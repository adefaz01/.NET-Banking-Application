@{
    ViewData["Title"] = "Change Password";
}
<h1 class="display-4 mb-4 pb-3 border-bottom">Change Password</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Password">

            <div class="form-group mb-2">
                <label for="Password" class="control-label">New Password</label>
                <input id="Password" name="Password" type="password" class=" form-control" 
                    data-val="true" data-val-required="The Password field is required." />
                @Html.ValidationMessage("Password", new { @class = "text-danger" })
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Confirm" class="btn btn-primary me-2" />
                <div class="btn btn-outline-primary">
                    <a asp-action="Index" class="text-decoration-none text-reset">Back to Accounts</a>
                </div>
            </div>
        </form>
    </div>
</div>

