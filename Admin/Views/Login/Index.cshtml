@{
    ViewData["Title"] = "Admin Login Page";
}

<h1 class="display-4 mb-4 pb-3 border-bottom">Login</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div class="form-group mb-2">
                <label for="Login" class="control-label">Login</label>
                <input id="Login" name="Login" class="form-control"
                       data-val="true" data-val-required="The Login field is required." />
            </div>

            <div class="form-group mb-2">
                <label for="Password" class="control-label">Password</label>
                <input id="Password" name="Password" type="password" class="form-control"
                    data-val="true" data-val-required="The Password field is required." />
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
            }
        </form>
    </div>
</div>